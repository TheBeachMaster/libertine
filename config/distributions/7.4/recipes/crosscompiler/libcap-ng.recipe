set -o errexit +o hashall

version 0.7.3
{
	depends musl-cross
	include config "${settings_string[LFS_AUTOTOOLS_CONFIG_VERSION]}"
	
	doc_resources . share
	
	strip_unneeded bin m4
	
	install_binaries bin m4
}

function install_crosscompiler_libcap-ng()
{
	buildUsingAutotoolsExternal callback_empty \
		--disable-dependency-tracking \
		--enable-shared \
		--enable-static \
		--enable-fast-install \
		--disable-dependency-tracking \
		--enable-systemd \
		--disable-listener \
		--with-gnu-ld \
		--with-sysroot= \
		--without-debug \
		--without-warn \
		--without-python
	
	xxxxx
}
