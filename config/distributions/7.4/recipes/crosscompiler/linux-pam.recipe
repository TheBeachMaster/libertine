set -o errexit +o hashall

version 1.1.8
{
	include config "${settings_string[LFS_AUTOTOOLS_CONFIG_VERSION]}"
	depends musl-cross
	depends selinux
	
	setuid_binaries sbin unix_chkpwd
	
	# todo: strip, compiler resources, etc
	
	install_system_binaries sbin unix_chkpwd
}

function install_crosscompiler_linux-pam()
{
	# pkgconfig, libprelude?
	buildUsingAutotoolsExternal callback_empty \
		--enable-shared \
		--enable-static \
		--disable-dependency-tracking \
		--enable-static-modules \
		--enable-pie \
		--disable-prelude \
		--enable-pamlocking \
		--enable-read-both-confs \
		--disable-db \
		--disable-nis \
			--enable-selinux \
		--disable-regenerate-docu \
			--with -pic \
		--with-gnu-ld \
		--without-mailspool \
		--without-xauth \
	    --without-xml-catalog \
		--without-libiconv-prefix \
		--without-libintl-prefix
}
