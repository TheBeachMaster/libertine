set -o errexit +o hashall

version 2.3.2
{
	depends musl-cross
	depends libcap-ng
	include config "${settings_string[LFS_AUTOTOOLS_CONFIG_VERSION]}"
	
	doc_resources . share
	
	strip_unneeded bin m4
	
	install_binaries bin m4
}

function install_crosscompiler_audit()
{
	buildUsingAutotoolsExternal callback_empty \
		--disable-silent-rules \
		--disable-dependency-tracking \
		--disable-shared \
		--enable-static \
		--enable-fast-install \
		--disable-dependency-tracking \
		--disable-gssapi-krb5 \
		--enable-systemd \
		--disable-listener \
		--with-gnu-ld \
		--without-debug \
		--without-warn \
		--without-python \
		--without-prelude \
		--without-apparmor \
		--without-libwrap \
		--with-libcap-ng=yes
}
