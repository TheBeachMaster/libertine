function installPackage_toolchain2_gettext()
{
	pushd gettext-tools >/dev/null
		
		EMACS="no" ./configure --prefix=/tools --disable-shared
		
		make -C gnulib-lib
		
		make -C src msgfmt
		
		cp -v src/msgfmt /tools/bin
		
	popd >/dev/null
}
