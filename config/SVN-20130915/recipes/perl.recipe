addSourcePackageDownload 5.18.1 "$perl_mirror"/5.0/"$ourSourcePackageName"-5.18.1.tar.bz2 MD5:4ec1a3f3824674552e749ae420c5e68c
addPatchDownload 5.18.1 "$lfs_patches_mirror"/"$ourSourcePackageName"-5.18.1-libc-1.patch MD5:daf5c64fd7311e924966842680535f8f

function installPackage_toolchain2_perl_5.18.1()
{
	patch -Np1 -i ../"$ourSourcePackageName"-"$ourVersion"-libc-1.patch
	
	sh Configure -des -Dprefix=/"$LFS_TOOLS"
	
	make
	
	cp -v perl cpan/podlators/pod2man /"$LFS_TOOLS"/bin
	mkdir -pv /"$LFS_TOOLS"/lib/perl5/"$ourVersion"
	cp -Rv lib/* /"$LFS_TOOLS"/lib/perl5/"$ourVersion"
}
