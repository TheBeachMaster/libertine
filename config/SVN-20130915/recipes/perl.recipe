addPatchDownload perl 5.18.1 http://www.linuxfromscratch.org/patches/lfs/development/perl-5.18.1-libc-1.patch MD5:daf5c64fd7311e924966842680535f8f

function installPackage_toolchain2_perl_5.18.1()
{
	patch -Np1 -i ../"$ourSourcePackageName"-"$ourVersion"-libc-1.patch
	
	sh Configure -des -Dprefix=/tools
	
	make
	
	cp -v perl cpan/podlators/pod2man /tools/bin
	mkdir -pv /tools/lib/perl5/"$ourVersion"
	cp -Rv lib/* /tools/lib/perl5/"$ourVersion"
}
