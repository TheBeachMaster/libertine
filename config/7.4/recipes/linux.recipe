set -o errexit +o hashall
source_package_with_download 3.10.10 "$LFS_MIRROR_LINUX_v3" "$LFS_SOURCE_PACKAGE_NAME"-3.10.10.tar.xz MD5:647f76225dd6bc112369ba573ba3de18,HKP_UNCOMPRESSED:6092693E:linux-3.10.10.tar.sign

function installPackage_toolchain1_linux()
{
	make mrproper
	
	make headers_check || echo "Warning: non-fatal but ignored as exit code !=0"
	
	make INSTALL_HDR_PATH=dest headers_install
	
	cp -rv dest/include/* /"$LFS_TOOLS"/include
}

function installPackage_system_linux()
{
	make mrproper
	
	make headers_check
	
	make INSTALL_HDR_PATH=dest headers_install
	
	find dest/include \( -name .install -o -name ..install.cmd \) -delete
	
	cp -rv dest/include/* /usr/include
}
