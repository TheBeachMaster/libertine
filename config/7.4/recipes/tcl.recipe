set -o errexit +o hashall;unset CDPATH;umask 022
addSourcePackageDownload 8.6.0 "$LFS_MIRROR_SOURCEFORGE"/"$LFS_SOURCE_PACKAGE_NAME"/"$LFS_SOURCE_PACKAGE_NAME"8.6.0-src.tar.gz MD5:573aa5fe678e9185ef2b3c56b24658d3 "$LFS_SOURCE_PACKAGE_NAME"8.6.0

# tcl is linked wrongly, why not  [Requesting program interpreter: /tools/lib/ld-linux-x86-64.so.2]  instead  [Requesting program interpreter: /lib64/ld-linux-x86-64.so.2]
# PATH=/tools/bin:$PATH readelf -e /tools/bin/locale | grep interpreter
function installPackage_toolchain2_tcl_8.6.0()
{
	local -r majorVersion=8.6
	
	sed -i s/500/5000/ generic/regc_nfa.c
	
	pushd unix >/dev/null
		
		installPackagePrototype
		
		chmod -v u+w /"$LFS_TOOLS"/lib/libtcl${majorVersion}.so
		
		make install-private-headers
		
		ln -sv tclsh${majorVersion} /"$LFS_TOOLS"/bin/tclsh
		
	popd >/dev/null
}
