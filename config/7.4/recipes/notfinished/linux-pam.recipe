set -o errexit +o hashall

version 1.1.8
{
	depends musl-cross
	include config "${settings_string[LFS_AUTOTOOLS_CONFIG_VERSION]}"
	
	make_setuid_binary sbin/unix_chkpwd
	install_binaries_in_paths sbin
}

function install_crosscompiler_linux-pam()
{
	# pkgconfig, libprelude?
	crosscompilerInstallPackagePrototype \
		--disable-shared \
		--enable-static \
		--disable-dependency-tracking \
		--enable-static-modules \
		--disable-pie \
		--disable-prelude \
		--enable-pamlocking \
		--enable-read-both-confs \
		--disable-db \
		--disable-nis \
			--disable-selinux \
		--disable-regenerate-docu \
			--without-pic \
		--with-gnu-ld \
		--without-mailspool \
		--without-xauth \
	    --without-xml-catalog \
		--without-libiconv-prefix \
		--without-libintl-prefix
}
