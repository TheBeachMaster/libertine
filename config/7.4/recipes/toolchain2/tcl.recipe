set -o errexit +o hashall

version 8.6.0
{
	depends gcc
}

function installPackage_toolchain2_tcl()
{
	local -r majorVersion=8.6
	
	sed -i s/500/5000/ generic/regc_nfa.c
	
	pushd unix >/dev/null
		
		installPackagePrototype
		
		chmod -v u+w /"$LFS_TOOLS"/lib/libtcl${majorVersion}.so
		
		make install-private-headers
		
		ln -sv tclsh${majorVersion} /"$LFS_TOOLS"/bin/tclsh
		
	popd >/dev/null
}
