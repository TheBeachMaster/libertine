set -o errexit +o hashall

version 0.18.3
{
	depends gawk
	
	include_once_per_version
}

function installPackage_toolchain2_gettext()
{
	pushd gettext-tools >/dev/null
		
		EMACS="no" ./configure --prefix=/"$LFS_TOOLS" --disable-shared
		
		make -C gnulib-lib
		
		make -C src msgfmt
		
		cp -v src/msgfmt /"$LFS_TOOLS"/bin
		
	popd >/dev/null
}
