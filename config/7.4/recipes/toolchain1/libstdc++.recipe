set -o errexit +o hashall

# Needs to track gcc version numbering
version 4.8.1
{
	depends glibc
	
	source_package_alias gcc "${LFS_SOURCE_PACKAGE_VERSION["${LFS_SOURCE_PACKAGE_NAME}"]}"
}

function installPackage_toolchain1_libstdc++()
{
	local gccVersion="4.8.1"
	
	createBuildFolderAndPushd "gcc" "$LFS_SOURCE_PACKAGE_VERSION"
	
		../gcc-"$LFS_SOURCE_PACKAGE_VERSION"/libstdc++-v3/configure \
		--host="$LFS_TGT"                                      \
		--prefix=/"$LFS_TOOLS"                                        \
		--disable-multilib                                     \
		--disable-shared                                       \
		--disable-nls                                          \
		--disable-libstdcxx-threads                            \
		--disable-libstdcxx-pch                                \
		--with-gxx-include-dir=/"$LFS_TOOLS"/"$LFS_TGT"/include/c++/"$LFS_SOURCE_PACKAGE_VERSION"
	
		make
	
		make install
		
	popdBuildFolder
}
