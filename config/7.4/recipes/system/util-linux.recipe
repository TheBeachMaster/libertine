set -o errexit +o hashall

version 2.23.2
{
	depends zlib
	
	# Dumb naming - v2.23 can't be easily resolved away
	source_package_with_download "$LFS_MIRROR_LINUX" utils/"$LFS_SOURCE_PACKAGE_NAME"/v2.23/"$LFS_SOURCE_PACKAGE_NAME"-"${LFS_SOURCE_PACKAGE_VERSION["${LFS_SOURCE_PACKAGE_NAME}"]}".tar.xz MD5:b39fde897334a4858bb2098edcce5b3f,HKP_UNCOMPRESSED:6092693E:"$LFS_SOURCE_PACKAGE_NAME"-"${LFS_SOURCE_PACKAGE_VERSION["${LFS_SOURCE_PACKAGE_NAME}"]}".tar.sign
}

function installPackage_system_util-linux()
{
	sed -i -e 's@etc/adjtime@var/lib/hwclock/adjtime@g' $(grep -rl '/etc/adjtime' .)
	mkdir -m 0755 -p /var/lib/hwclock
	
	installPackagePrototype --disable-su --disable-sulogin --disable-login
}
