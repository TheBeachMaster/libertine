function installPackage_system_lfs-directories()
{
	local -r sedExpression="s/$LFS_TOOLS/usr/"
	sed "$sedExpression" /"$LFS_TOOLS"/lib/libstdc++.la >>/usr/lib/libstdc++.la
}
