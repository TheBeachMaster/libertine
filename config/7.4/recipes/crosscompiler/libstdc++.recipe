set -o errexit +o hashall

# Needs to track gcc version numbering
version 4.8.1
{
	depends glibc
	
	source_package_alias gcc "${LFS_RECIPE_VERSION["${LFS_RECIPE_NAME}"]}"
}

function installPackage_crosscompiler_libstdc++()
{
	local gccVersion="4.8.1"
	
	createBuildFolderAndPushd "gcc" "$LFS_RECIPE_VERSION"
	
		../gcc-"$LFS_RECIPE_VERSION"/libstdc++-v3/configure \
		--host="$LFS_TGT"                                      \
		--prefix=/"$LFS_TOOLS"                                        \
		--disable-multilib                                     \
		--disable-shared                                       \
		--disable-nls                                          \
		--disable-libstdcxx-threads                            \
		--disable-libstdcxx-pch                                \
		--with-gxx-include-dir=/"$LFS_TOOLS"/"$LFS_TGT"/include/c++/"$LFS_RECIPE_VERSION"
	
		make
	
		make install
		
	popdBuildFolder
}
