function install_crosscompiler_patchelf()
{
	pushdDependencyFolder
	
		# relies on autoreconf
		./bootstrap.sh
		
	popdDepdendencyFolder

	configurePackagePrototype external-crosscompiler-gcc external-crosscompiler-g++ --disable-dependency-tracking
	
	LFS_CFLAGS_PRE="-v $LFS_LDFLAGS_STATIC" LFS_CXXFLAGS_PRE="-v $LFS_LDFLAGS_STATIC" makePackagePrototype external-crosscompiler-gcc external-crosscompiler-g++
}
