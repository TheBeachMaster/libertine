set -o errexit +o hashall

version 4.2
{
	depends musl-cross
	include config "${settings_string[LFS_AUTOTOOLS_CONFIG_VERSION]}"
}

function install_crosscompiler_bash()
{
	local -r oldMAKEFLAGS="$MAKEFLAGS"
	export MAKEFLAGS="-j1"
	crosscompilerInstallPackagePrototype --without-bash-malloc --disable-nls
	export MAKEFLAGS="$MAKEFLAGS"
}
