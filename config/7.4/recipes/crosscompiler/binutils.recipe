set -o errexit +o hashall

version 2.23.2
{
	:
}

function installPackage_crosscompiler_binutils()
{
	sed -i -e 's/@colophon/@@colophon/' -e 's/doc@cygnus.com/doc@@cygnus.com/' bfd/doc/bfd.texinfo
	
	# Defaults to  /lib:/usr/lib:/usr/local/lib:/usr/"$LFS_TGT"/lib
	local -r whereToFindLibrariesForBinutils="$LFS_DEPENDENCY_PATH"/install/lib
	
	createBuildFolderAndPushd
		
		../"$LFS_RECIPE_EXTRACTED_TARBALL_FOLDER"/configure \
		--prefix="$LFS_DEPENDENCY_PATH"/install \
		--with-sysroot="$LFS" \
		--with-lib-path=/"$LFS_TOOLS"/lib \
		--target="$LFS_TGT" \
		--disable-nls \
		--disable-werror
		
		make
		
		make DESTDIR="$LFS" install
		
	popdBuildFolder
	
	exit 50
}
